<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.election.controller.UserController">

    <!-- Stopka -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #34495e;">
            <Label style="-fx-text-fill: white; -fx-font-size: 30;" text="Wybory prezydenckie 2025" textAlignment="CENTER">
                <font>
                    <Font size="35.0" />
                </font>
            </Label>
        </HBox>
    </bottom>

    <!-- GŁÓWNA ZAWARTOŚĆ -->
    <top>
        <VBox alignment="CENTER" prefWidth="800.0" spacing="20">
            <!-- Panel nawigacyjny -->
            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10; -fx-background-color: #34495e;">
                <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-base: #e74c3c; -fx-text-fill: white; -fx-font-size: 14;" text="Wyloguj" />
            </HBox>

            <!-- Formularz głosowania -->
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10;">

                <!-- Nagłówek -->
                <Label fx:id="welcomeLabel" style="-fx-font-size: 50; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Witaj w systemie głosowania!" />

                <!-- Lista kandydatów -->
                <Label style="-fx-font-size: 48; -fx-font-weight: bold;" text="Wybierz kandydata:" />

                <ComboBox fx:id="candidateComboBox" prefHeight="65.0" prefWidth="450.0" promptText="Kliknij, aby wybrać..." style="-fx-font-size: 25;" />

                <!-- Przycisk głosowania -->
                <Button fx:id="submitButton" onAction="#handleVoteSubmit" style="-fx-font-size: 32; -fx-base: #27ae60; -fx-text-fill: white; -fx-pref-width: 450;" text="Oddaj głos" />

                <!-- Komunikaty statusu -->
                <Label fx:id="statusLabel" style="-fx-font-size: 24; -fx-text-fill: #e74c3c;" wrapText="true" />
            </VBox>
        </VBox>
    </top>
</BorderPane>
