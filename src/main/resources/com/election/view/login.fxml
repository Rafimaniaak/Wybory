<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.election.controller.LoginController">

    <center>
        <VBox spacing="10" style="-fx-background-color: #34495e;">
            <VBox alignment="CENTER" prefHeight="599.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #34495e;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Label alignment="CENTER" prefHeight="123.0" prefWidth="436.0" style="-fx-font-size: 40; -fx-font-weight: bold;" text="Wybory prezydenckie" textFill="WHITE">
                    <font>
                        <Font name="Arial" size="32.0" />
                    </font>
                </Label>

                <GridPane alignment="CENTER" hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" />
                        <ColumnConstraints />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <Label text="Login:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <font>
                     <Font size="20.0" />
                  </font></Label>
                    <TextField fx:id="usernameField" prefWidth="200" promptText="Wprowadź login" GridPane.columnIndex="1" GridPane.rowIndex="0">
                  <font>
                     <Font size="20.0" />
                  </font></TextField>

                    <Label text="Hasło:" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1">
                  <font>
                     <Font size="20.0" />
                  </font></Label>
                    <PasswordField fx:id="passwordField" prefWidth="200" promptText="Wprowadź hasło" GridPane.columnIndex="1" GridPane.rowIndex="1">
                  <font>
                     <Font size="20.0" />
                  </font></PasswordField>

                    <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Button onAction="#handleLogin" prefHeight="44.0" prefWidth="202.0" text="Zaloguj">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
                    </HBox>
                </GridPane>

                <VBox alignment="CENTER" spacing="10">
                    <Label fx:id="errorLabel" style="-fx-text-fill: #ff0000;" textFill="WHITE">
                  <font>
                     <Font size="20.0" />
                  </font></Label>
<!--                    <Label fx:id="statusLabel" textFill="WHITE">-->
<!--                  <font>-->
<!--                     <Font size="20.0" />-->
<!--                  </font></Label>-->
                </VBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
